@{
    ViewBag.Title = "Библиотечная система";

}

<div class="alert alert-success" role="alert">
    <h1 class="alert-heading">Добро пожаловать в библиотечную систему!</h1>
    <hr>
    <p class="mb-0">Авторизирутесь прежде чем приступить к работе</p>

    <div class="accordion" id="accordionAuthorization">
        <div class="card">
            <div class="card-header" id="headingOne">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Авторизация по читательскому билету
                    </button>
                </h2>
            </div>

            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionAuthorization">
                <div class="card-body">
                    <form method="post" action="/Home/Authorization">
                        <input type="number" id="libraryCard" name="login">
                        <button type="submit" class="btn btn-success">Вход</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h2 class="mb-0">
                    <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Администрирование
                    </button>
                </h2>
            </div>
            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionAuthorization">
                <div class="card-body">
                    <form method="post" action="/Home/AdminAuthorization">
                        <input type="password" id="password" name="password">
                        <button type="submit" class="btn btn-success">Авторизация в роли администратора</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>